<!-- RecipeDetailPage.xaml -->
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fitnessapp_thema9.View.RecipeDetailPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="{Binding Title}" FontSize="24" />
            <Image Source="{Binding Image}" HeightRequest="200" />
            <Label Text="Missed Ingredients:" FontAttributes="Bold" />
            <Label Text="{Binding MissedIngredients}" />

            <Button Text="Opslaan" Clicked="OnSaveRecipeButtonClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
